<!--
  ==================================================
  World Lighting & Fog Rebalance Mod
  @version     1.0.0
  @date        2025-07-14
  @author      Demonata Gaming

  @group    WorldEnvironmentTweaks
  @description
    Adjusts environmental fog and ambient lighting to improve
    immersion, reduce harsh contrast, and balance day/night visuals.
  @notes
  - fogPower scaled from 0.9 (day) to 0.75 (night)
  - Ambient values zeroed for consistency across conditions
  - Indoor lighting tuned for smoother transitions
  @xref     biomes.xml → SECTION: BIOME WEATHER AND FOG TUNING
  ==================================================
-->
<configs>
  <!-- Fog strength scales gently from day to night -->
  <set xpath="/worldglobal/environment/property[@name='fogPower']/@value">0.9, 0.75</set>
  <!-- Ambient lighting tuned for atmospheric play without overwhelming darkness -->
  <set xpath="/worldglobal/environment/property[@name='ambientMoon']/@value">0, 0</set>
  <set xpath="/worldglobal/environment/property[@name='ambientEquatorScale']/@value">0</set>
  <set xpath="/worldglobal/environment/property[@name='ambientGroundScale']/@value">0</set>
  <set xpath="/worldglobal/environment/property[@name='ambientSkyScale']/@value">0, 0</set>
  <set xpath="/worldglobal/environment/property[@name='ambientSkyDesat']/@value">.5, .5</set>
  <!-- Indoor lighting logic (moderate transition & scale) -->
  <set xpath="/worldglobal/environment/property[@name='ambientInsideSpeed']/@value">0</set>
  <set xpath="/worldglobal/environment/property[@name='ambientInsideThreshold']/@value">0</set>
  <set xpath="/worldglobal/environment/property[@name='ambientInsideEquatorScale']/@value">0</set>
  <set xpath="/worldglobal/environment/property[@name='ambientInsideGroundScale']/@value">0</set>
  <set xpath="/worldglobal/environment/property[@name='ambientInsideSkyScale']/@value">0</set>
</configs>
