  <append xpath="/items/item[@name='toolApiaryExtractor']">
    <effect_group tiered="false">
      <passive_effect name="CraftingTime" operation="perc_add" value="-.5"/>
    </effect_group>
  </append>
  <append xpath="/items/item[@name='toolApiaryBroodBox']">
    <effect_group tiered="false">
      <passive_effect name="CraftingIngredientCount" operation="perc_add" value="-.5" tags="resourceCropChrysanthemumPlant,resourceCropGoldenrodPlant,resourceCropCottonPlant"/>
    </effect_group>
  </append>
  <!-- TEST Dew Collector Tools -->
  <append xpath="/items/item[@name='toolDewGatherer']">
    <effect_group tiered="false">
      <passive_effect name="CraftingTime" operation="perc_add" value="-.35"/>
    </effect_group>
  </append>
  <append xpath="/items/item[@name='toolDewTarp']">
    <effect_group tiered="false">
      <passive_effect name="CraftingTime" operation="perc_add" value="-.15"/>
    </effect_group>
  </append>
  
  <!-- TEST Add/Removed Jar Returns from certain food items in game -->
  <remove xpath="/items/item[@name='foodChiliDog']/property[@class='Action0']/property[@name='Create_item']" ></remove>
  <append xpath="/items/item[@name='foodGumboStew']" >
    <property name="Create_Item" value="drinkJarEmpty"/>
  </append>
</configs>
